@inject IGithubService GithubService

<div class="repo container text-center">
    <div class="row arrow mb-3 p-4 shadow-lg"><span class="oi oi-arrow-left" aria-hidden="true"></span></div>
    <div class="row">
        @foreach (var repo in repos)
        {
            <div class="card border-dark mb-3 mr-3 shadow-lg p-4 bg-white rounded" style="width: 18rem;">
                @* <img src="@repo.Logo" class="card-img-top" alt="@repo.Name"> *@
                <div class="card-body text-center">
                    <h5 class="card-title">@repo.Name</h5>
                    <p class="card-text">@repo.Description</p>
                </div>
                <a href="@repo.Svn_url" class="card-footer">Take a look...</a>
            </div>
        }
    </div>
    <div class="row arrow mb-3 p-4 shadow-lg"><span class="oi oi-arrow-right" aria-hidden="true"></span></div>
</div>

@code {
    private List<Repos> repos = new List<Repos>();

    protected override async Task OnInitializedAsync()
    {
        await GithubService.LoadRepos();
        repos = GithubService.Repos.Take(6).ToList();
    }
}